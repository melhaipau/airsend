<Window x:Class="AirSend.Views.DebugWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Debug Console" Height="380" Width="720">
    <Grid Margin="8">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <ListBox x:Name="LogList"
                 FontFamily="Consolas" FontSize="12"
                 BorderBrush="Gray" BorderThickness="1" />

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,8,0,0">
            <Button Content="Copy All" Margin="4" Padding="10,4" Click="CopyAll_Click"/>
            <Button Content="Clear" Margin="4" Padding="10,4" Click="Clear_Click"/>
            <Button Content="Close" Margin="4" Padding="10,4" IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>
