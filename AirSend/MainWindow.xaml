
<Window x:Class="AirSend.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="AirSend â€” AirPlay Sender" Height="520" Width="920">
    <Grid Margin="12">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="360"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <GroupBox Header="Discovered Devices" Grid.Column="0" Margin="4">
            <DockPanel>
                <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" Margin="6">
                    <Button Content="Start Discovery" Width="120" Margin="4" Command="{Binding StartDiscoveryCommand}"/>
                    <Button Content="Stop Discovery" Width="120" Margin="4" Command="{Binding StopDiscoveryCommand}"/>
                </StackPanel>
                <ListBox ItemsSource="{Binding Devices}" SelectedItem="{Binding SelectedDevice}" Margin="6">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Vertical" Margin="4">
                                <TextBlock Text="{Binding Name}" FontWeight="Bold"/>
                                <TextBlock Text="{Binding IP}" FontStyle="Italic"/>
                                <TextBlock Text="{Binding ServiceType}"/>
                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </DockPanel>
        </GroupBox>

        <GroupBox Header="Controls" Grid.Column="1" Margin="4">
            <StackPanel Margin="10">
                <TextBlock Text="Selected Device:" FontWeight="Bold"/>
                <TextBlock Text="{Binding SelectedDevice.Name}" Margin="0,0,0,10"/>
                <StackPanel Orientation="Horizontal" Margin="0,6,0,6">
                    <Button Content="Start Stream" Width="120" Margin="4" Command="{Binding StartStreamCommand}"/>
                    <Button Content="Stop Stream" Width="120" Margin="4" Command="{Binding StopStreamCommand}"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="Volume" VerticalAlignment="Center" Margin="0,0,8,0"/>
                    <Slider Minimum="0" Maximum="1" Value="{Binding Volume, Mode=TwoWay}" Width="200"/>
                </StackPanel>
            </StackPanel>
        </GroupBox>
    </Grid>
</Window>
