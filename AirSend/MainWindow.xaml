<!-- File: AirSend/MainWindow.xaml -->
<Window x:Class="AirSend.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="AirSend — AirPlay Sender" Height="560" Width="980">
    <DockPanel>
        <!-- Menu Bar -->
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="_File">
                <MenuItem Header="E_xit" Click="Exit_Click"/>
            </MenuItem>
            <MenuItem Header="_View">
                <MenuItem Header="_Debug Console" Click="OpenDebug_Click"/>
            </MenuItem>
            <MenuItem Header="_Help">
                <MenuItem Header="_About" Click="About_Click"/>
            </MenuItem>
        </Menu>

        <Grid Margin="12">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="380"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Left: Devices -->
            <GroupBox Header="Discovered Devices" Grid.Column="0" Margin="4">
                <DockPanel>
                    <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" Margin="6">
                        <Button Content="Start Discovery" Width="140" Margin="4" Command="{Binding StartDiscoveryCommand}"/>
                        <Button Content="Stop Discovery" Width="140" Margin="4" Command="{Binding StopDiscoveryCommand}"/>
                    </StackPanel>

                    <ListBox ItemsSource="{Binding Devices}" SelectedItem="{Binding SelectedDevice}" Margin="6">
                        <ListBox.ItemContainerStyle>
                            <Style TargetType="ListBoxItem">
                                <Setter Property="Margin" Value="4"/>
                                <Setter Property="Padding" Value="6"/>
                                <Setter Property="BorderThickness" Value="1"/>
                                <Setter Property="BorderBrush" Value="#DDD"/>
                                <Setter Property="Background" Value="#FFF"/>
                                <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                <Style.Triggers>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter Property="BorderBrush" Value="#4A90E2"/>
                                        <Setter Property="BorderThickness" Value="2"/>
                                        <Setter Property="Background" Value="#E8F2FF"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </ListBox.ItemContainerStyle>

                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Vertical">
                                    <TextBlock Text="{Binding Name}" FontWeight="Bold"/>
                                    <TextBlock>
                                        <Run Text="IP: "/><Run Text="{Binding IP}"/>
                                    </TextBlock>
                                    <TextBlock>
                                        <Run Text="Service: "/><Run Text="{Binding ServiceType}"/>
                                    </TextBlock>
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </DockPanel>
            </GroupBox>

            <!-- Right: Controls -->
            <GroupBox Header="Controls" Grid.Column="1" Margin="4">
                <StackPanel Margin="10" VerticalAlignment="Top">
                    <TextBlock Text="Selected Device:" FontWeight="Bold"/>
                    <TextBlock Text="{Binding SelectedDevice.Name}" Margin="0,0,0,6"/>

                    <CheckBox Content="Audio-only (HomePod only)"
                              IsChecked="{Binding AudioOnlyMode, Mode=TwoWay}"
                              ToolTip="When ON, streaming is allowed only to devices that look like HomePods."/>

                    <StackPanel Orientation="Horizontal" Margin="0,6,0,6">
                        <Button Content="Start Stream" Width="140" Margin="4"
                                Command="{Binding StartStreamCommand}"/>
                        <Button Content="Stop Stream" Width="140" Margin="4"
                                Command="{Binding StopStreamCommand}"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock Text="Volume" VerticalAlignment="Center" Margin="0,0,8,0"/>
                        <Slider Minimum="0" Maximum="1" Value="{Binding Volume, Mode=TwoWay}" Width="220"/>
                    </StackPanel>

                    <Border BorderThickness="1" BorderBrush="#EEE" Padding="6" Margin="0,8,0,0" Background="#FAFAFA">
                        <TextBlock Text="Tip: Use View → Debug Console to see discovery and streaming logs."
                                   FontStyle="Italic" Foreground="#555"/>
                    </Border>
                </StackPanel>
            </GroupBox>
        </Grid>
    </DockPanel>
</Window>
